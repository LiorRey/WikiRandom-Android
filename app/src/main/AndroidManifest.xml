<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.aviv.wikirandom">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/wikirandomappiconready"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.LaunchScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".View.LoginActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".View.RegisterActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".View.LangActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".View.GameActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".View.LeaderboardActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".View.AboutActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>